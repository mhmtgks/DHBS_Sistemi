@using Service;

@{
    Layout = "~/Views/Shared/_Layout_Doktor.cshtml";
    ViewBag.Title = "Randevular";
}

<div class="pagetitle">
    <h1>Randevular</h1>
</div>
    <table id="tablo1" class="table table-striped table-bordered dt-resposive nowrap" style="margin-left:70px;">
        <thead>
            <tr>
                <th class="th-sm">
                    TC
                </th>
                <th class="th-sm">
                   Adı Soyadı
                </th>
                <th class="th-sm">
                    Iletişim
                </th>
                <th class="th-sm">
                    Tarih
                </th>


            </tr>
        </thead>
        <tbody>
            @{
                Randevu hasta2 = new Randevu();
            }
            @foreach (var item in hasta2.Lists("select * from vw_randevu where Getdate()<Tarih and DoktorID="+idExtractor.userid))
            {
                <tr>
                    <td>
                        @Html.Label(item.TC.ToString())
                    </td>
                    <td>
                        @Html.Label(item.AdiSoyadi.ToString())
                    </td>
                    <td>
                        @Html.Label(item.Iletisim.ToString())
                    </td>
                    <td>
                        @Html.Label(item.Tarih.Day.ToString()+"/"+item.Tarih.Month.ToString()+"/"+item.Tarih.Year.ToString()+"    "+item.Tarih.Hour.ToString()+":"+item.Tarih.Minute.ToString())
                    </td>

                </tr>

            }

        </tbody>
    </table>
<style>
    /* Custom CSS to move the search bar to the right */
    div.dataTables_wrapper div.dataTables_filter {
        margin-left: 480px;
    }

    div.dataTables_wrapper div.dataTables_length {
        margin-left: 90px;
    }
</style>