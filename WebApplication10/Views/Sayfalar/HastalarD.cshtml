<body>
    <label id="label1"></label>
    <table id="tablo1" class="table table-striped table-bordered dt-resposive nowrap" style="margin-left:70px; margin-top:-90px;">
        <thead>
            <tr>
                <th class="th-sm">
                    ID
                </th>
                <th class="th-sm">
                    TC
                </th>
                <th class="th-sm">
                    Adı Soyadı
                </th>
                <th class="th-sm">
                    İletişim
                </th>
                <th class="th-sm">
                    Doğum Tarihi
                </th>
                <th class="th-sm">
                    Cinsiyet
                </th>
                <th class="th-sm">
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                Hasta hasta1 = new Hasta();
            }
            @foreach (var item in hasta1.Lists("select * from Hasta where Status='Active'"))
            {
                <tr>
                    <td>
                        @Html.Label(item.hastaid.ToString())
                    </td>
                    <td>
                        @Html.Label(item.TC.ToString())
                    </td>
                    <td>
                        @Html.Label(item.AdiSoyadi.ToString())
                    </td>
                    <td>
                        @Html.Label(item.Iletisim.ToString())
                    </td>
                    <td>
                        @Html.Label(item.DogumTarihi.Day.ToString()+"/"+item.DogumTarihi.Month.ToString()+"/"+item.DogumTarihi.Year.ToString())

                    </td>
                    <td>
                        @Html.Label(item.Cinsiyet.ToString())
                    </td>
                    <td>
                        <button id="btnekle" class="btn btn-primary btn-sm" onclick="getRowDataD(this)" data-toggle="modal" data-target="#exampleModal">Tüm İşlemleri Görüntüle</button>
                    </td>
                </tr>

            }

        </tbody>
    </table>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel1">Hasta İşlemleri</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div style="margin-top:-40px">
                        <table id="tablodetay" class="table table-striped table-bordered dt-resposive nowrap" style="margin-left:10px; margin-top:0px;">
                            <label hidden="hidden" id="myLabel"></label>
                            <thead>
                                <tr>
                                    <th class="th-sm">
                                        Hasta ID
                                    </th>
                                    <th class="th-sm">
                                        Hasta Adı Soyadı
                                    </th>
                                    <th class="th-sm">
                                        İslem Açıklaması
                                    </th>
                                    <th class="th-sm">
                                        Tarih
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    Islemler ıslemler = new Islemler();
                                    
                                }
                                @foreach (var item in ıslemler.Lists("select I.HastaID,I.IslemGrubuID,I.IslemID,[Adı Soyadı] as adhasta,I.IslemAciklamasi,Tarih,c.CalisanID,c.AdiSoyadi from vw_IslemlerDR I join Calisan c on c.AdiSoyadi=I.AdiSoyadi where c.CalisanID=" + +idExtractor.userid))
                                {
                                    <tr>
                                        <td>
                                            @Html.Label(item.HastaID.ToString())
                                        </td>
                                        <td>
                                            @Html.Label(item.Adi_SoyadiH.ToString())
                                        </td>
                                        <td>
                                            @Html.Label(item.IslemAciklamasi.ToString())
                                        </td>
                                        <td>
                                            @Html.Label(item.Tarih.Day.ToString()+"/"+item.Tarih.Month.ToString()+"/"+item.Tarih.Year.ToString())
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

