@using Service;
@{
    Layout = "~/Views/Shared/_Layout_Yonetici.cshtml";
    ViewBag.Title = "İzin Yöneticisi";
}
<script defer src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script defer src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script defer src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script defer src="~/js/script.js"></script>
<html lang="tr">


@if (TempData["AlertMessage"] != null)
{
    if (TempData["AlertMessage"] == "İzin ekleme Başarısız")
    {

        <body onload="failed()">
        </body>
    }
    else
    {
        <body onload="success()">
        </body>

    }


}

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" ></script>
<body>
    <table id="tablo1" class="table table-striped table-bordered dt-resposive nowrap" style="margin-left:70px; margin-top:-150px;">
        <thead>
            <tr>
                <th class="th-sm">
                    Çalışan Adı
                </th>
                <th class="th-sm">
                    Uzmanlık
                </th>
                <th class="th-sm">
                    Eski İzin Aralığı
                </th>
                <th class="th-sm">
                  İzin Aralığı  Girin
                </th>

            </tr>
        </thead>
        <tbody>
            @{
                YillikIzin maas = new YillikIzin();
            }
            @foreach (var item in maas.Lists("select distinct y.DoktorID,y.BaslangicTarihi,y.BitisTarihi,d.AdiSoyadi,d.Uzmanlık from YillikIzin  y join vw_doktorlar d on d.DoktorID=y.DoktorID"))
            {
                <tr>
                    <td>
                        @Html.Label(item.AdiSoyadi.ToString())
                    </td>
                    <td>
                        @Html.Label(item.Uzmanlık.ToString())
                    </td>
                    <td>
                        <label> @item.BaslangicTarihi.ToString("yyyy/MM/dd") - @item.BitisTarihi.ToString("yyyy/MM/dd")  </label>
                    </td>
                    <td>
                        @using (Html.BeginForm("IzinYonetimi", "Sayfalar", FormMethod.Post))
                        {
                        <input type="date" required="" name="BaslangicTarihi"></input>
                            <input type="date" required="" name="BitisTarihi"></input>
                        <button name="DoktorID" value="@item.DoktorID">İzin Ekle</button>
                        }
                    </td>
               </tr>

            }

        </tbody>
    </table>


</body>

<style>
    /* Custom CSS to move the search bar to the right */
    div.dataTables_wrapper div.dataTables_filter {
        margin-left: 480px;
        margin-top: -150px;
    }

    div.dataTables_wrapper div.dataTables_length {
        margin-left: 90px;
        margin-top: 10px;
        visibility: hidden;
    }

    div.dataTables_info {
        visibility: hidden;
    }

</style>
