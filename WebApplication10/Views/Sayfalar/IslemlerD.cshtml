<body>

    <div style="margin-top:100px">
    <table id="tablo1" class="table table-striped table-bordered dt-resposive nowrap" style="margin-left:90px; margin-top:-150px;">
        <thead>
            <tr>
                    <th class="th-sm">
                        İslem ID
                    </th>
                <th class="th-sm">
                   Hasta Adı Soyadı
                </th>
                    <th class="th-sm">
                        İslem Açıklaması
                    </th>
                    <th class="th-sm">
                        Tarih
                        </th>
                <th class="th-sm">

                </th>
            </tr>
        </thead>
        <tbody>
            @{
                Islemler ıslemler = new Islemler();
            }
            @foreach (var item in ıslemler.Lists("select I.HastaID, I.IslemGrubuID,I.IslemID,[Adı Soyadı] as adhasta,I.IslemAciklamasi,Tarih,c.CalisanID,c.AdiSoyadi from vw_IslemlerDR I join Calisan c on c.AdiSoyadi=I.AdiSoyadi where c.CalisanID="+idExtractor.userid))
            {
                <tr>
                    <td>
                        @Html.Label(item.IslemID.ToString())
                    </td>
                    <td>
                        @Html.Label(item.Adi_SoyadiH.ToString())
                    </td>
                        <td>
                            @Html.Label(item.IslemAciklamasi.ToString())
                        </td>
                        <td>
                            @Html.Label(item.Tarih.Day.ToString()+"/"+item.Tarih.Month.ToString()+"/"+item.Tarih.Year.ToString())
                        </td>
                    <td>
                            <button type="submit" data-toggle="modal" data-target="#exampleModal" onclick="ıslemvalue1(this)">İşlem Seç </button>
                    </td>
                </tr>

            }

        </tbody>

    </table>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel1">Hasta İşlemleri</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div style="margin-top:0px">
                            <div style="margin-bottom: 0px;margin-left: 100px;">
                                @using (Html.BeginForm("IslemlerD", "Sayfalar", FormMethod.Post))
                                {
                                    <label style="display:block">İşlem ID</label>
                                    <input style="display:block" id="input1" name="IslemID" />
                                    <label style="display:block"> Hasta Adı</label>
                                    <input id="input2" name="Adi_SoyadiH" style="display:inline-block" />
                                    <label style="display:block"> İşlem Açıklaması</label>
                                    <input id="input3" name="" style="display:inline-block" />
                                    <button class="btn btn-danger btn-block" type="submit" style="display:block">Sil</button>
                                   

                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
