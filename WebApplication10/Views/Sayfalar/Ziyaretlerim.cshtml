<body>
    <label id="label1"></label>
    <div style="margin-top:-40px">
        <table id="tablo1" class="table table-striped table-bordered dt-resposive nowrap" style="margin-left:70px; margin-top:-40px;">
            <thead>
                <tr>
                    <th class="th-sm">
                        Adı Soyadı
                    </th>
                    <th class="th-sm">
                        Tutar
                    </th>
                    <th class="th-sm">
                        Tarih
                    </th>
                    <th class="th-sm">

                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    VW_Faturalar hasta1 = new VW_Faturalar();
                }
                @foreach (var item in hasta1.Lists("select * from vw_Faturalar where HastaID="+idExtractor.userid))
                {
                    <tr>
                        <td>
                            @Html.Label(item.AdiSoyadi.ToString())
                        </td>
                        <td>
                            @Html.Label(item.Ucret.ToString())
                        </td>
                        <td>
                            @Html.Label(item.Tarih.Day.ToString()+"/"+item.Tarih.Month.ToString()+"/"+item.Tarih.Year.ToString()+"    "+item.Tarih.Hour.ToString()+":"+item.Tarih.Minute.ToString())
                        </td>
                        <td>

                            <button id="btsil" class="btn btn-primary btn-warning" value="@item.FaturaID" data-toggle="modal" data-target="#exampleModal" onclick="getRowData123(this)">Detay</button>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel1">Fatura Detay</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">

                            <table id="myTable" class="table table-bordered table-striped">
                                <label hidden="hidden" id="myLabel"></label>
                                <thead>
                                    <tr>
                                        <th>Fatura ID</th>
                                        <th>Adı Soyadı</th>
                                        <th>Islem Açıklaması</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        VW_FatureDetay fatura = new VW_FatureDetay();
                                    }
                                    @foreach (var item in fatura.Lists("select * from vw_FaturaDetay"))
                                    {
                                        <tr>
                                            <td>
                                                @Html.Label(item.FaturaID.ToString())
                                            </td>
                                            <td>
                                                @Html.Label(item.AdiSoyadi.ToString())
                                            </td>
                                            <td>
                                                @Html.Label(item.IslemAciklamasi.ToString())
                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

