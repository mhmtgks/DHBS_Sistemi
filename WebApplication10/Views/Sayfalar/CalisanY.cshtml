<html lang="tr">
<head>
   
    <script>
        function getRowData(button) {
            // Butona tıklanan satırdaki verileri almak için ebeveyn (<tr>) öğesini buluyoruz
            var row = button.parentNode.parentNode;

            // Satırdaki verileri çekmek için <td> öğelerini buluyoruz
            var cells = row.getElementsByTagName("td");

            // Verilere erişmek için sütun indekslerini kullanabilirsiniz (örneğin, cells[0].innerText sütun 1'in içeriğini verir)
            var data1 = cells[0].innerText;
            var data2 = cells[1].innerText;
            var data3 = cells[2].innerText;
            var data4 = cells[3].innerText;
            var data5 = cells[4].innerText;

            var lbl1 = document.getElementById("calisanid");
            var lbl2 = document.getElementById("TC");
            var lbl3 = document.getElementById("adi");
            var lbl6 = document.getElementById("adres");
            var lbl4 = document.getElementById("Ünvan");
            lbl1.value = data1;
            lbl2.value = data2;
            lbl3.value = data3;
            lbl4.value = data5;
            lbl6.value = data4;
            // ... Diğer işlemler ...
        }
        function selector(){
            // Butona tıklanan satırdaki verileri almak için ebeveyn (<tr>) öğesini buluyoruz

            var lbls = document.getElementById("güncelle");
            lbls.value = 2;

            // ... Diğer işlemler ...
        }
        function doktor(){

            let element1 = document.getElementById("divdoktor");
            let hidden1 = element1.getAttribute("hidden");

            if (hidden1) {
                element1.removeAttribute("hidden");
            } else {
                element1.setAttribute("hidden", "hidden");
            }


        }
    </script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

    <title>DHBS Sistemi</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/dashboard/">
    <script src="/jss.js"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!-- Bootstrap core CSS -->
    <link href="/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/dashboard.css" rel="stylesheet">
    <style type="text/css">
        /* Chart.js */
        -webkit-keyframes chartjs-render-animation {
            from

        {
            opacity: 0.99
        }

        to {
            opacity: 1
        }

        }

        keyframes chartjs-render-animation {
            from

        {
            opacity: 0.99
        }

        to {
            opacity: 1
        }

        }

        .chartjs-render-monitor {
            -webkit-animation: chartjs-render-animation 0.001s;
            animation: chartjs-render-animation 0.001s;
        }
    </style>


    @if (TempData["AlertMessage"] != null)
    {
        if (TempData["AlertMessage"] == "İşlem Başarısız")
        {
            <div style="margin-left:80px;    margin-top: -100px;" class="alert alert-danger">
                @TempData["AlertMessage"]
            </div>
        }
        else
        {
            <div style="margin-left:80px;    margin-top: -100px;" class=" alert alert-success">
                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </symbol>
                </svg>
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>

                @TempData["AlertMessage"]

            </div>

        }


    }
   
    </head>
<body style="margin-top:0px;">
    <button style="margin-left:950px; margin-bottom:50px;" data-toggle="modal" data-target="#exampleModal1">Çalışan Ekle</button>

    <label id="label1"></label>
    <table id="tablo1" class="table table-striped table-bordered dt-resposive nowrap" style="margin-left:70px; margin-top:-90px;">
        <thead>
            <tr>
                <th class="th-sm">
                    ID
                </th>
                <th class="th-sm">
                    TC
                </th>
                <th class="th-sm">
                    Adı Soyadı
                </th>
                <th class="th-sm">
                    Adres
                </th>
                <th class="th-sm">
                    Ünvan
                </th>
                <th class="th-sm">

                </th>
            </tr>
        </thead>
        <tbody>
            @{
                Calisan calisan = new Calisan();
            }
            @foreach (var item in calisan.Lists("select * from Calisan"))
            {
                <tr>
                    <td>
                        @Html.Label(item.CalisanID.ToString())
                    </td>
                    <td>
                        @Html.Label(item.TC.ToString())
                    </td>
                    <td>
                        @Html.Label(item.AdiSoyadi.ToString())
                    </td>
                    <td>
                        @Html.Label(item.Adres.ToString())
                    </td>
                    <td>
                        @Html.Label(item.Ünvan.ToString())
                    </td>
                    <td>
                        <button id="btnekle" class="btn btn-primary btn-sm" onclick="getRowData(this)" data-toggle="modal" data-target="#exampleModal">Güncelle</button>
                    </td>
                </tr>

            }

        </tbody>
    </table>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel1">Calışan Güncelle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div style="margin-left:110px; margin-top:0px;">
                        @using (Html.BeginForm("CalisanY", "Sayfalar", FormMethod.Post))
                        {
                            <label> Calışan ID</label>
                            <div class="input-group">
                                <span class="fa fa-envelope" aria-hidden="true"></span>
                                <input id="calisanid" type="text" required="" name="CalisanID" readonly />
                            </div>
                            <label> TC</label>
                            <div class="input-group">
                                <span class="fa fa-envelope" aria-hidden="true"></span>
                                <input id="TC" type="text" required="" name="TC" />
                            </div>
                            <label> AdiSoyadi</label>
                            <div class="input-group">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="adi" type="text" required="" name="AdiSoyadi" />
                            </div>
                            <label> Adres</label>
                            <div class="input-group">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="adres" type="text" required="" name="Adres" />
                            </div>
                            <label> Ünvan</label>
                            <div class="input-group">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="Ünvan" type="text" required="" name="Ünvan" />
                            </div>
                            <div class="input-group" hidden="hidden">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="güncelle" type="text" required="" name="tip" value="1"/>
                            </div>
                            <button style="display:inline-block; margin-top:10px;"class="btn btn-danger btn-block" type="submit">Sil</button>
                            <button  style="margin-top:10px;" class="btn btn-danger btn-block" onclick="selector()" type="submit">Güncelle</button>
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel1">Calışan Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div><button class="btn btn-warning btn-block" style="margin-top:20px; margin-left: 380px;" onclick="doktor()"> Doktor</button></div>
                    <div style="margin-left:110px; margin-top:0px;">
                        @using (Html.BeginForm("CalisanY", "Sayfalar", FormMethod.Post))
                        {

                            <label> TC</label>
                            <div class="input-group">
                                <span class="fa fa-envelope" aria-hidden="true"></span>
                                <input id="TC" type="text" required="" name="TC" />
                            </div>
                            <label> AdiSoyadi</label>
                            <div class="input-group">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="adi" type="text" required="" name="AdiSoyadi" />
                            </div>
                            <label> Adres</label>
                            <div class="input-group">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="adres" type="text" required="" name="Adres" />
                            </div>
                            <label> Ünvan</label>
                            <div class="input-group">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="Ünvan" type="text" required="" name="Ünvan" />
                            </div>

                            <div id="divdoktor" class="input-group" hidden="hidden" style="margin-top:15px;display: table-caption;">
                                <label style="margin-bottom:10px;"> Uzmanlık &ensp;  </label>
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="Ünvan" type="text"  name="Uzmanlık" />
                            </div>
                            <div  class="input-group" hidden="hidden">
                                <span class="fa fa-lock" aria-hidden="true"></span>
                                <input id="güncelle1" type="text" required="" name="tip" value="3" />
                            </div>


                            <button style="display:inline-block; margin-top:10px;" class="btn btn-danger btn-block" type="submit">EKLE</button>
                            
                        }
                        
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </div>


